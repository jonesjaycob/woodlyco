datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  id      Int     @id @default(autoincrement())
  name    String  
  email   String  @unique
  phone   String  
  address String  
  quotes  Quote[]
}

model Quote {
  id          Int       @id @default(autoincrement())
  clientId    Int       
  amount      Float     
  description String     
  dateIssued  DateTime  @default(now())
  client      Client    @relation(fields: [clientId], references: [id])
}